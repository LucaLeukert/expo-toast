{
  "name": "@lucaleukert/expo-toast",
  "version": "0.1.1",
  "description": "Native-feeling liquid-glass toast notifications for Expo (iOS 26+)",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "source": "src/index.ts",
  "files": [
    "build",
    "ios",
    "src",
    "expo-module.config.json",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "expo-module build",
    "clean": "expo-module clean",
    "lint": "biome check .",
    "lint:expo": "expo-module lint",
    "format": "biome format . --write",
    "format:check": "biome format .",
    "test": "vitest run",
    "test:unit": "vitest run",
    "prepare": "node scripts/prepare.mjs",
    "prepublishOnly": "expo-module prepublishOnly",
    "expo-module": "expo-module",
    "docs:sync": "node scripts/sync-docs.mjs && node scripts/sync-api-docs.mjs",
    "docs:check-sync": "node scripts/sync-docs.mjs --check && node scripts/sync-api-docs.mjs --check",
    "docs:install": "cd docs && bun install",
    "docs:dev": "cd docs && bun run dev",
    "docs:build": "node scripts/docs-build.mjs",
    "example:start": "cd example && bun run start",
    "example:ios": "cd example && bun run ios",
    "example:device": "cd example && bun run ios",
    "example:prebuild": "cd example && bunx expo prebuild --platform ios",
    "open:ios": "xed example/ios"
  },
  "keywords": [
    "react-native",
    "expo",
    "toast",
    "ios"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/LucaLeukert/expo-toast"
  },
  "bugs": {
    "url": "https://github.com/LucaLeukert/expo-toast/issues"
  },
  "author": "Luca Leukert",
  "license": "MIT",
  "homepage": "https://github.com/LucaLeukert/expo-toast#readme",
  "devDependencies": {
    "@biomejs/biome": "^2.4.0",
    "@types/react": "~19.1.0",
    "eslint": "^9.39.1",
    "expo": "^54.0.33",
    "expo-module-scripts": "^5.0.8",
    "react-native": "0.81.5",
    "typescript": "~5.9.2",
    "vitest": "^2.1.9"
  },
  "peerDependencies": {
    "expo": "*",
    "react": "*",
    "react-native": "*"
  }
}
